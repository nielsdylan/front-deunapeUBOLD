{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "target": "es6",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": [
      "es2021",
      "dom"
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "files": ["globals.d.ts"]
}